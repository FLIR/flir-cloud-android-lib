<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/add_tag_custom_view_remove_data_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.12"
        android:adjustViewBounds="true"
        android:background="#ffffff"
        android:scaleType="fitCenter"
        android:src="@drawable/account_minus_data_icon" />

    <TextView
        android:id="@+id/add_tag_custom_view_tag_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.30" />

    <TextView
        android:id="@+id/add_tag_custom_view_tag_values"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.40" />

    <ImageButton
        android:id="@+id/add_tag_custom_view_add_value_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:background="#ffffff"
        android:paddingEnd="16dp"
        android:paddingLeft="0dp"
        android:paddingRight="16dp"
        android:paddingStart="0dp"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_add_button" />

</LinearLayout>