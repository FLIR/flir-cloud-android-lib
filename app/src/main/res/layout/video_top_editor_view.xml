<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/top_view_1_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/go_to_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/video_page_top_editor_go_to" />

        <TextView
            android:id="@+id/tv_time_line_picker_go_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_view_2_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_top_time_line_go_to"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/camera_view_bottom_bar_background_selector"
            android:src="@drawable/ic_go_to_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_view_3_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/video_page_top_editor_export" />

        <LinearLayout
            android:id="@+id/ll_from_to_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_export_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/video_page_top_editor_text_view_from" />

            <TextView
                android:id="@+id/tv_export_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/video_page_top_editor_text_view_to" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00DDA366"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time_line_picker_export_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_time_line_picker_export_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_view_4_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/ib_export_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/camera_view_bottom_bar_background_selector"
            android:src="@drawable/ic_export_icon" />
    </LinearLayout>
</LinearLayout>